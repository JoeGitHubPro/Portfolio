@model IEnumerable<Portfolio.Certifcate>

@{
    ViewBag.Title = "Certifcate";
}

<h2>Certifcate</h2>
<hr />

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-warning" })
</p>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CertifcateLink)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CertifcateName)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CertifcateLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CertifcateName)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-info" }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.ID }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
